/* pages/abstract/abstract.wxss */
@import '../common.wxss';
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 89.1%;
  padding: 4% 2%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.red {color: red;}
.green {color: green;}
.blue {color: blue;}

.content {
  width: 90%;
  font-size: 26rpx;
}

.title {
  padding-bottom: 4%;
  border-bottom: 1px solid #e1e1e1;
  margin-bottom: 6%;
}

.content .link {
  display: block;
  margin: 10rpx 0;
  text-indent: 52rpx;
}